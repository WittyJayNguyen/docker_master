# Docker Development Environment Configuration

# MySQL Configuration
MYSQL_ROOT_PASSWORD=mysql_root_pass
MYSQL_DATABASE=main_db
MYSQL_USER=mysql_user
MYSQL_PASSWORD=mysql_pass

# PostgreSQL Configuration
POSTGRES_DB=docker_master
POSTGRES_USER=postgres_user
POSTGRES_PASSWORD=postgres_pass

# Redis Configuration (Optional)
REDIS_PASSWORD=

# Default PHP Version for new projects
DEFAULT_PHP_VERSION=8.4

# Xdebug Configuration
XDEBUG_MODE=develop,debug
XDEBUG_CLIENT_HOST=host.docker.internal
XDEBUG_CLIENT_PORT=9003
XDEBUG_IDEKEY=VSCODE

# Container Names
MYSQL_CONTAINER=mysql_low_ram
POSTGRES_CONTAINER=postgres_low_ram
REDIS_CONTAINER=redis_low_ram
NGINX_CONTAINER=nginx_proxy_low_ram

# Timezone
TIMEZONE=Asia/Ho_Chi_Minh

# Development Settings
COMPOSE_PROJECT_NAME=docker-dev-env
COMPOSE_FILE=docker-compose.yml

# Network Settings
NGINX_PORT=80
NGINX_SSL_PORT=443
MYSQL_PORT=3306
POSTGRESQL_PORT=5432
REDIS_PORT=6379
ADMINER_PORT=8080
PHPMYADMIN_PORT=8081

# Log Level
LOG_LEVEL=info
