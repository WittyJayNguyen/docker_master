[mysqld]
# Auto-generated MySQL configuration for 32GB RAM
# Optimized for development environment

# Disable SSL for development
ssl = 0
require_secure_transport = OFF

# Memory settings (optimized for 32GB RAM)
innodb_buffer_pool_size = 2G
innodb_log_file_size = 512M
innodb_log_buffer_size = 256M
query_cache_size = 128M
query_cache_limit = 4M
tmp_table_size = 256M
max_heap_table_size = 256M

# Connection settings
max_connections = 500
max_allowed_packet = 128M
thread_cache_size = 64
table_open_cache = 3200
open_files_limit = 65535

# InnoDB settings
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_open_files = 3200
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000
innodb_read_io_threads = 8
innodb_write_io_threads = 8

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Query cache
query_cache_type = 1

# Logging (minimal for development)
general_log = 0
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 1

# Binary logging (minimal)
log-bin = mysql-bin
binlog_format = ROW
expire_logs_days = 3
max_binlog_size = 100M
sync_binlog = 0

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
