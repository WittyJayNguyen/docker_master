runtime/projects/*
runtime/logs/*
runtime/data/*
runtime/backups/*

# Keep runtime directory structure but ignore contents
!runtime/projects/.gitkeep
!runtime/logs/.gitkeep
!runtime/data/.gitkeep
!runtime/backups/.gitkeep

